# Environment variables for Trading Signal System
# Copy this file to .env and fill in your values

# Google Cloud Platform
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
GCP_ZONE=us-central1-a

# BigQuery
BQ_DATASET=trading_signals
BQ_LOCATION=US

# Alpha Vantage API
ALPHA_VANTAGE_API_KEY=your-api-key-here

# Model Configuration
MODEL_PATH=models/production/latest.pth
MODEL_REGISTRY_BUCKET=your-model-bucket

# MLflow Tracking
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=temporal_gnn_trading

# Logging
LOG_LEVEL=INFO

# Alert Configuration
ALERT_EMAILS=alerts@yourcompany.com
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
PAGERDUTY_KEY=your-pagerduty-key

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=4

# Database (if using local PostgreSQL for metadata)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_signals
DB_USER=postgres
DB_PASSWORD=password

# Feature Flags
ENABLE_REAL_TIME_PREDICTIONS=false
ENABLE_PAPER_TRADING=true
ENABLE_ALERTS=true

# Trading Configuration
MAX_POSITIONS=20
POSITION_SIZE_PCT=5.0
CONFIDENCE_THRESHOLD=0.6
RETURN_THRESHOLD=0.02

# Data Configuration
BACKFILL_START_DATE=2020-01-01
DATA_RETENTION_DAYS=365

# Performance Tuning
BATCH_SIZE=32
NUM_WORKERS=4
CACHE_SIZE_MB=1000